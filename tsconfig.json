{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./lib",
        "importHelpers": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "types/*"
            ]
        }
    },
    "include": [
        "lib/**/*.ts",
        "lib/**/*.json"
    ],
    "exclude": [
        "node_modules"
    ]
}
